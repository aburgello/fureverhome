/* Hero Section */
.hero-section {
  background-image: url('<%= asset_path('hero_dog.jpg') %>');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  width: 100%;
  height: calc(100vw * 7 / 16); /* Maintain 16:9 aspect ratio */
  display: flex;
  align-items: center;
  justify-content: flex-start; /* Ensure content starts from the left */
  padding: 25px;
  font-family: 'Roboto Slab', serif; /* Use Roboto Slab font */
  color: #323440;
  position: relative;
}

.hero-content {
  max-width: 45%; /* Constrain content to the right half */
  text-align: left; /* Left-align the text */
  margin-left: auto; /* Push content towards the right */
  padding-right: 5%; /* Add spacing from the right side */
  z-index: 2; /* Ensure content is above the background overlay */
}

.hero-section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent; /* No background shadow */
  z-index: 1;
}

.hero-section h1, .hero-section p, .furever-button {
  font-weight: 400;
  position: relative;
}

.hero-section h1 {
  font-weight: 700;
  font-size: 3.5rem; /* Large size for larger screens */
  margin-bottom: 20px;
}

.hero-section p {
  font-family: 'Montserrat', sans-serif; /* Montserrat font */
  font-size: 1.2rem;
  line-height: 1.8;
  color: #323440;
  margin-bottom: 30px;
  padding-right: 20px;
}

@media (max-width: 768px) {
  .hero-content {
    max-width: 100%; /* Full width on mobile */
    margin-left: 0; /* Center content */
    padding-right: 0;
    text-align: center; /* Center-align text on mobile */
  }

  .hero-section {
    height: 50vh; /* Adjust height for mobile */
    justify-content: center; /* Center content on mobile */
  }

  .hero-section h1 {
    font-size: 2.5rem; /* Reduce font size for smaller screens */
  }

  .hero-section p {
    font-size: 1rem; /* Adjust paragraph size */
    padding-right: 0;
  }

  .furever-button {
    font-size: 1rem; /* Smaller button text on mobile */
    padding: 8px 15px; /* Adjust button padding */
  }
}

/* Extra Small Screen Adjustments */
@media (max-width: 576px) {
  .hero-section h1 {
    font-size: 2rem; /* Further reduce font size */
  }

  .hero-section p {
    font-size: 0.9rem; /* Further adjust paragraph size */
  }

  .furever-button {
    font-size: 0.9rem; /* Smaller button text */
    padding: 6px 12px; /* Adjust button padding */
  }
}
