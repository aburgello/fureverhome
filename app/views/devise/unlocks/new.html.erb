<h2 class="text-center mt-4" style="text-decoration: none">Resend Unlock Instructions</h2>

<div class="container">
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="text-center">
      <%= f.submit "Resend Unlock Instructions", class: "furever-button" %>
    </div>
  <% end %>


<div class="text-center mt-4">
  <%= render "devise/shared/links" %>
</div>
</div>

    <%= stylesheet_link_tag 'main', media: 'all', 'data-turbo-track': 'reload' %>

 <style>
.furever-button {
    margin-top: 5px;
    font-size: 0.8rem;
    background-color: #323440;
  }

  .furever-button:hover {
    background-color: #fdcd07;
    color: #323440
  }
  </style>