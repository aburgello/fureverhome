<h2 class="text-center mt-4" style="text-decoration: none">Forgot your password?</h2>

<div class="container mt-4">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-signin" }) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="form-group">
      <%= f.submit "Send me reset password instructions", class: "furever-button btn-block" %>
    </div>
  <% end %>

  <div class="text-center mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>

    <%= stylesheet_link_tag 'main', media: 'all', 'data-turbo-track': 'reload' %>
