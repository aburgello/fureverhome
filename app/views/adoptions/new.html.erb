<div class="pet-header">
  <h1 class="text-center my-4">Adoption Request for <%= @pet.title %></h1>

  <%= form_with model: @adoption, url: pet_adoptions_path(@pet), local: true, class: 'container pb-4 rounded mb-3' do |f| %>
    <% if @adoption.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@adoption.errors.count, "error") %> prohibited this adoption from being saved:</h2>
        <ul>
          <% @adoption.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :pet_id, value: @pet.id %>

    <div class="mb-3">
      <%= f.label :message, "Why do you want to adopt #{ @pet.title }?", class: 'form-label' %>
      <%= f.text_area :message, class: 'form-control', rows: 4, placeholder: 'Tell us why you think this pet is a good fit for you' %>
    </div>

    <div class="d-flex justify-content-between">
      <div>
        <%= f.submit "Submit Request", class: 'furever-button' %>
      </div>
      <div>
        <%= link_to 'Back to Pets', pet_path(@pet), class: 'furever-button' %>
      </div>
    </div>
  <% end %>
</div>

 <style>
.furever-button {
    margin-top: 5px;
    font-size: 0.8rem;
    background-color: #323440;
  }

  .furever-button:hover {
    background-color: #fdcd07;
    color: #323440
  }
  </style>