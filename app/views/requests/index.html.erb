<div class="container mt-5 pet-header">
  <div class="row">

    <div class="col-12 mb-5">
      <h1 class="mb-4">My Requests</h1>
      <% if @my_requests.present? %>
        <div class="row">
          <% @my_requests.each do |adoption| %>
            <div id="<%= dom_id(adoption) %>" class="col-md-4 mb-4">
              <div class="card h-100 shadow-sm">
                <div class="card-header">
                  <h5 class="card-title mb-0">Request for <%= adoption.pet.title %></h5>
                </div>
                <div class="card-body">
                  <p class="card-text"><strong>Email:</strong> <%= adoption.adopter_email %></p>
                  <p class="card-text"><strong>Message:</strong> <%= adoption.message %></p>
                  <div class="mt-4 d-flex justify-content-between">
                    <%= link_to 'Message', adoption_messages_path(adoption), class: 'btn btn-primary btn-sm' %>
                    <%= link_to 'Delete', pet_adoption_path(adoption.pet, adoption), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-info">
          <p>You haven't requested any adoption yet!</p>
        </div>
      <% end %>
    </div>

    <% if current_user.role == 'owner' %>
      <div class="col-12 mb-4">
        <h1 class="mb-4">Requests for My Pets</h1>
        <% if @requests_for_my_pets.present? %>
          <div class="row">
            <% @requests_for_my_pets.each do |pet, adoptions| %>
              <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                  <div class="card-header">
                    <h5 class="card-title mb-0">Requests for <%= pet.title %></h5>
                  </div>
                  <div class="card-body">
                    <% adoptions.each do |adoption| %>
                      <div id="<%= dom_id(adoption) %>">
                        <p class="card-text"><strong>Email:</strong> <%= adoption.adopter_email %></p>
                        <p class="card-text"><strong>Message:</strong> <%= adoption.message %></p>
                        <div class="mt-4 d-flex justify-content-between">
                          <%= link_to 'Message', adoption_messages_path(adoption), class: 'btn btn-primary btn-sm' %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-info shadow-sm">
            <p>Your pets haven't had adoption requests yet!</p>
          </div>
        <% end %>
      </div>
    <% end %>

<div class="col-12 mb-4">
  <h1 class="mb-4">Completed Requests</h1>
  <% if @completed_requests_as_adopter.present? %>
    <div class="row">
      <% @completed_requests_as_adopter.each do |adoption| %>
        <div id="<%= dom_id(adoption) %>" class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <%= link_to adoption_messages_path(adoption), class: 'text-decoration-none text-dark' do %>
              <div class="card-header">
                <h5 class="card-title mb-0">
                  <%= adoption.status.capitalize %> Request for <%= adoption.pet.title %>
                </h5>
              </div>
              <div class="card-body">
                <p class="card-text"><strong>Email:</strong> <%= adoption.adopter_email %></p>
                <p class="card-text"><strong>Message:</strong> <%= adoption.message %></p>
                <p class="card-text"><strong>Status:</strong> <%= adoption.status.capitalize %></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @completed_requests_as_owner.present? %>
    <div class="row">
      <% @completed_requests_as_owner.each do |adoption| %>
        <div id="<%= dom_id(adoption) %>" class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <%= link_to adoption_messages_path(adoption), class: 'text-decoration-none text-dark' do %>
              <div class="card-header">
                <h5 class="card-title mb-0">
                  <%= adoption.status.capitalize %> Request for <%= adoption.pet.title %>
                </h5>
              </div>
              <div class="card-body">
                <p class="card-text"><strong>Email:</strong> <%= adoption.adopter_email %></p>
                <p class="card-text"><strong>Message:</strong> <%= adoption.message %></p>
                <p class="card-text"><strong>Status:</strong> <%= adoption.status.capitalize %></p>
              </div>
            <% end %>
            <div class="card-footer text-right">
              <%= link_to 'Delete', pet_adoption_path(adoption.pet, adoption), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this completed request?' }, class: 'btn btn-danger btn-sm' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @completed_requests_as_adopter.blank? && @completed_requests_as_owner.blank? %>
    <div class="alert alert-info shadow-sm">
      <p>No completed requests yet!</p>
    </div>
  <% end %>
</div>


