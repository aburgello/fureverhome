<h1 class="text-center my-4">Edit Pet</h1>

<div class="container">
  <%= form_with(model: @pet, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :breed, class: 'form-label' %>
      <%= form.text_field :breed, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :age, class: 'form-label' %>
      <%= form.number_field :age, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :image, class: 'form-label' %>
      <%= form.file_field :image, class: 'form-control' %>
    </div>

    <div class="text-center">
      <%= form.submit 'Update Pet', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', my_pets_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
