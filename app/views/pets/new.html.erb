<h1 class="text-center my-4" id="index-title">New Pet</h1>


<%= form_with model: @pet, local: true, class: 'container pb-4 rounded mb-3' do |f| %>

  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Enter the name of your little friend' %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 4, placeholder: 'What is he/she like?' %>
  </div>

  <div class="mb-3">
    <%= f.label :breed, class: 'form-label' %>
    <%= f.text_field :breed, class: 'form-control', placeholder: 'Enter breed' %>
  </div>

  <div class="mb-3">
    <%= f.label :age, class: 'form-label' %>
    <%= f.number_field :age, class: 'form-control', placeholder: 'Enter age' %>
  </div>

  <div class="mb-3">
    <%= f.label :status, class: 'form-label' %>
    <%= f.select :status, options_for_select([['Available', 'available'], ['Adopted', 'adopted']]), {}, class: 'form-select' %>
  </div>

  <div class="mb-3">

    <%= f.label :image_url, class: 'form-label' %>
    <%= f.text_field :image_url, class: 'form-control', placeholder: 'Enter image URL' %>

  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= f.submit "Create Pet", class: 'btn btn-primary btn-lg' %>
    </div>
    <div>
      <%= link_to 'Back', pets_path, class: 'btn btn-secondary btn-lg' %>
    </div>
  </div>
<% end %>
