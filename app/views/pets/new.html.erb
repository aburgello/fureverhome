<h1 class="text-center my-4">New Pet</h1>

<%= form_with model: @pet, local: true, class: 'container', html: { multipart: true } do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 4 %>
  </div>

  <div class="mb-3">
    <%= f.label :breed, class: 'form-label' %>
    <%= f.text_field :breed, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :age, class: 'form-label' %>
    <%= f.number_field :age, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :status, class: 'form-label' %>
    <%= f.select :status, options_for_select([['Available', 'available'], ['Adopted', 'adopted']]), {}, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.label :image, "Upload Image", class: 'form-label' %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit "Create Pet", class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="actions text-center my-3">
  <%= link_to 'Back', pets_path, class: 'btn btn-secondary' %>
</div>
