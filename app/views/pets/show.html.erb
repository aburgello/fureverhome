<body>

<div class="pet-header m-3">
  <h1>Meet <span class="sparkles"><%= @pet.title %></span>!</h1>
</div>

<div class="container text-center">
  <% if @pet.image_url.present? %>
    <%= image_tag @pet.image_url, alt: @pet.title, class: 'pet-image' %>
  <% else %>
    <%= image_tag @pet.display_image_url, alt: @pet.title, class: 'pet-image' %>
  <% end %>
</div>

<div class="container pet-details">
  <div class="details-section">
    <p><strong>Description:</strong> <%= @pet.description %></p>
    <p><strong>Breed:</strong> <%= @pet.breed %></p>
    <p><strong>Age:</strong> <%= @pet.age %> years old</p>
    <p><strong>Status:</strong> <%= @pet.status.humanize %></p>
  </div>

  <div class="d-flex justify-content-between">
    <% if user_signed_in? %>
      <% if @pet.user == current_user %>
        <%= link_to 'Edit', edit_pet_path(@pet), class: 'btn btn-primary' %>
      <% elsif @pet.status == 'available' %>
        <%= link_to 'Adopt', new_pet_adoption_path(pet_id: @pet.id), class: 'btn btn-primary adopt-button'%>
      <% end %>
      <%= link_to 'Back', pets_path, class: 'btn btn-secondary' %>
    <% else %>
      <%= link_to 'Back', pets_path, class: 'btn btn-secondary' %>
    <% end %>
  </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
